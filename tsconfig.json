{
  "compilerOptions": {
		"target": "es6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
		"allowJs": true,
		"declaration": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
		"moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
